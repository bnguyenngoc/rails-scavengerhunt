<h1>Challenge Submission</h1>

<% if !@team_challenges.empty?%>
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Challenge</th>
                    <th>Team</th>
                    <th>status</th>
                    <th>Score</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @team_challenges.each do |t|%>
                    <tr>
                        <td><%= t.challenge_id %></td>
                        <td><%= t.team_id %></td>
                        <td><%= t.status%></td>
                        <td><%= t.score%></td>
                        <td> 
                            <%= link_to 'View', edit_teams_challenge_path(t)%>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>